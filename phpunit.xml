<phpunit colors="true" bootstrap="tests/bootstrap.php" >
    <testsuites>
        <testsuite name="all">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <coverage>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <report>
            <html outputDirectory="html-coverage" lowUpperBound="80" highLowerBound="100" />
        </report>
    </coverage>
</phpunit>